<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table1"
        android:stretchColumns="*"
        android:background="@color/gray">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row1"
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:layout_weight="1"
            android:stretchColumns="*">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:layout_weight="1">

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/background"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="品牌:"
                    android:id="@+id/tv11"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp" />

                <TextView android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView"
                    android:layout_below="@id/tv11"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Not connected"
                    android:id="@+id/connectState"
                    android:textColor="@color/red"
                    android:layout_alignTop="@+id/textView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="目前無換牌指令"
                    android:id="@+id/swapTitle"
                    android:textColor="@color/dark_gray"
                    android:layout_below="@id/textView"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp" />
                <SeekBar
                    android:id="@+id/myseek"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:max="100"
                    android:progress="3"
                    android:progressDrawable="@color/gray"
                    android:thumb="@drawable/slider"
                    android:layout_below="@+id/swapTitle"
                    android:layout_alignStart="@+id/swapTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:text="Brand Name"
                    android:id="@+id/brandName"
                    android:layout_toEndOf="@+id/tv11"
                    android:layout_alignBottom="@+id/tv11"
                    android:layout_marginStart="30dp"
                    android:textColor="#000000" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:background="@color/background"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="材料資訊"
                    android:id="@+id/textView2"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal" />

                <!--<ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView"
                    android:layout_gravity="center_horizontal" > -->
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listView" />
                <!--</ScrollView>-->
            </LinearLayout>
        </TableRow>
        <TableRow
            android:background="@color/gray">
            <com.example.tenny.monitor.ScrollForeverTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:text="this is marquee~"
                android:textColor="@color/black"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:focusable="true"
                android:id="@+id/msg"
                android:layout_span="3" />
        </TableRow>
    </TableLayout>



</RelativeLayout>
